<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="payment_acquirer_yottapay" model="payment.acquirer">
            <field name="name">Yotta Pay</field>
            <field name="image_128" type="base64" file="payment_yottapay/static/src/img/yottapay_icon.png"/>
            <field name="provider">yottapay</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="view_template_id" ref="yottapay_form"/>
            <field name="module_id" ref="base.module_payment_yottapay"/>
            <field name="description" type="html">
              <p>
                Yotta Pay is the fastest and most secure way to accept payments via UK bank account.
              </p>
              <ul class="list-inline">
                <li class="list-inline-item">
                  <i class="fa fa-check"/>Online Payment
                </li>
                <li class="list-inline-item">
                  <i class="fa fa-check"/>No card required
                </li>
              </ul>
            </field>
        </record>
    </data>
</odoo>
